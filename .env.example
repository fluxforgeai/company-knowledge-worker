# Company Knowledge Worker Configuration

# Required: OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Model configuration (GPT-4.1 recommended)
OPENAI_MODEL=gpt-4.1

# Optional: Document path (update to your company's document directory)
BASE_PATH=/path/to/your/company/documents

# Optional: Database configuration
DB_NAME=vector_db

# Optional: Processing configuration
MAX_FILE_SIZE=100000
CHUNK_SIZE=1200
CHUNK_OVERLAP=150

# Optional: Enhanced retrieval configuration
RETRIEVAL_K=25

# Optional: Gradio configuration
GRADIO_PORT=7860
GRADIO_SHARE=False